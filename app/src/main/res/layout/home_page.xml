<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignInActivity"
    android:background="@drawable/gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="-2dp"
        android:gravity="center_horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/logo1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_marginTop="-30dp"
                android:backgroundTint="#E90074"
                android:src="@drawable/bg1" />

            <ImageView
                android:id="@+id/avatar"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="38dp"
                android:layout_marginEnd="41dp"
                android:backgroundTint="#E90074"
                android:src="@drawable/avatar" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/Poppins_Medium"
                android:text="Hi Ahmad Hasan Faqih Aulia"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="75dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Welcome to App Love Your Pets"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

        </RelativeLayout>

        <!-- Section Search Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="18dp">

            <androidx.cardview.widget.CardView
                android:layout_width="350dp"
                android:layout_height="40dp"
                app:cardElevation="6dp"
                app:cardCornerRadius="8dp"
                android:layout_margin="8dp">

                <EditText
                    android:id="@+id/search_bar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/search"
                    android:drawableStart="@drawable/search"
                    android:textSize="12sp"
                    android:fontFamily="@font/Poppins_Medium"
                    android:hint="Cari Produk..."
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp"
                    android:layout_gravity="center_vertical"/>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Section Fitur (6 cards) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:gravity="center">

            <!-- First Row of Cards -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="-20dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_margin="8dp">

                    <ImageButton
                        android:id="@+id/feature1"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@android:color/transparent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/hewankuu"
                        android:contentDescription="Hewanku" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hewanku"
                        android:textColor="#333333"
                        android:fontFamily="@font/Poppins_Medium"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_margin="8dp">

                    <ImageButton
                        android:id="@+id/feature2"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@android:color/transparent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/galery"
                        android:contentDescription="Galeri" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Galeri"
                        android:textColor="#333333"
                        android:fontFamily="@font/Poppins_Medium"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_margin="8dp">

                    <ImageButton
                        android:id="@+id/feature3"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@android:color/transparent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/shopp"
                        android:contentDescription="Toko" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Toko"
                        android:textColor="#333333"
                        android:fontFamily="@font/Poppins_Medium"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Second Row of Cards -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="-30dp">

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_margin="8dp">

                    <ImageButton
                        android:id="@+id/feature4"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@android:color/transparent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/chatdok"
                        android:contentDescription="Chat Dokter" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chat Dokter"
                        android:textColor="#333333"
                        android:fontFamily="@font/Poppins_Medium"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_margin="8dp">

                    <ImageButton
                        android:id="@+id/feature5"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@android:color/transparent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/buatjanji"
                        android:contentDescription="Buat Janji" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Buat Janji"
                        android:textColor="#333333"
                        android:fontFamily="@font/Poppins_Medium"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_margin="8dp">

                    <ImageButton
                        android:id="@+id/feature6"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@android:color/transparent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/edukasinew"
                        android:contentDescription="Edukasi" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Edukasi"
                        android:textColor="#333333"
                        android:fontFamily="@font/Poppins_Medium"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- First Card View -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Artikel Terbaru"
            android:textColor="#D91656"
            android:textSize="16sp"
            android:gravity="start"
            android:layout_marginStart="-110dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="350dp"
            android:layout_height="110dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:layout_margin="8dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:gravity="center_vertical">

                <!-- Product Image -->
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/kucheng"
                    android:contentDescription="Product Image"
                    android:layout_marginEnd="16dp" />

                <!-- Product Details -->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5 Tips Merawat Hwean"
                        android:textSize="13sp"
                        android:fontFamily="@font/poppins_semibold"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Terbaru"
                        android:textSize="12sp"
                        android:fontFamily="@font/Poppins_Medium"
                        android:textColor="#ff5722"
                        android:layout_marginTop="4dp" />

                    <!-- Edit and Delete Buttons side by side -->
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="start">

                        <Button
                            android:id="@+id/deleteBtn4"
                            android:layout_width="0dp"
                            android:layout_height="38dp"
                            android:text="Lihat"
                            android:textSize="10sp"
                            android:fontFamily="@font/poppins_semibold"
                            app:backgroundTint="#D91656"
                            app:cornerRadius="5dp"
                            android:layout_weight="1" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- First Card View -->
        <androidx.cardview.widget.CardView
            android:layout_width="350dp"
            android:layout_height="110dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:layout_margin="8dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:gravity="center_vertical">

                <!-- Product Image -->
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/kucheng"
                    android:contentDescription="Product Image"
                    android:layout_marginEnd="16dp" />

                <!-- Product Details -->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5 Tips Merawat Hwean"
                        android:textSize="13sp"
                        android:fontFamily="@font/poppins_semibold"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Terbaru"
                        android:textSize="12sp"
                        android:fontFamily="@font/Poppins_Medium"
                        android:textColor="#ff5722"
                        android:layout_marginTop="4dp" />

                    <!-- Edit and Delete Buttons side by side -->
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="start">

                        <Button
                            android:id="@+id/deleteBtn5"
                            android:layout_width="0dp"
                            android:layout_height="38dp"
                            android:text="Lihat"
                            android:textSize="10sp"
                            android:fontFamily="@font/poppins_semibold"
                            app:backgroundTint="#D91656"
                            app:cornerRadius="5dp"
                            android:layout_weight="1" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>



    </LinearLayout>
</ScrollView>
